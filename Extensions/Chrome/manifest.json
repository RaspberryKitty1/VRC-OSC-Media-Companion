{
  "manifest_version": 3,
  "name": "Media Info Extractor",
  "version": "2.0",
  "description": "Extracts YouTube and Twitch media info and sends it to a local WebSocket server.",
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.twitch.tv/*"
  ],
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["twitch-content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [],
  "action": {
    "default_title": "Media Info Extractor"
  }
}
